<div class="row">
  <%# User Status %>
  <div class="col-md-offset-3 col-md-6 well">
    <% user = User.find_by_id(params[:id])%>
    <% unless user.nil? %>
      <div>USERNAME : <%= user.username %></div>
      <div>게시물 수 : <%= Post.where(user_id: params[:id]).count %></div>
      <div>댓글 수 : <%= Reply.where(user_id: params[:id]).count %></div>
    <% end %>
  </div>
  <% if params[:id]==(session[:user_id].to_s) %>
    <% if flash[:change_username] == true %>
      <%= render :partial => "layouts/flash", :locals => {:offset => 3, :size => 6} %>
    <% end %>
    <%# Change Username %>
    <form class="col-md-offset-3 col-md-6  well form-horizontal" action="/user/change_username" method="POST">
      <div class="form-group">
        <label class="col-md-2" for="new_username">New Username</label>
        <div class="col-md-10">
          <input type="text" name="new_username" class="form-control" name="body" placeholder="New Username" required>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2" for="password">Password</label>
        <div class="col-md-10">
          <input type="password" name="password" class="form-control" name="body" placeholder="Password" required>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Change Username</button>
        </div>
      </div>  
    </form>
    <%# Change Password %>
    <% if flash[:change_password] == true %>
      <%= render :partial => "layouts/flash", :locals => {:offset => 3, :size => 6} %>
    <% end %>
    <form class="col-md-offset-3 col-md-6  well form-horizontal" action="/user/change_password" method="POST">
      <div class="form-group">
        <label class="col-md-2" for="old_password">Old Password</label>
        <div class="col-md-10">
          <input type="password" name="old_password" class="form-control" name="body" placeholder="Old Password" required>
        </div>
      </div>
      <div class="form-group">
        <label class="col-md-2" for="new_password">New Password</label>
        <div class="col-md-10">
          <input type="password" name="new_password" class="form-control" name="body" placeholder="New Password" required>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Change Password</button>
        </div>
      </div>  
    </form>
  <% end %>
</div>