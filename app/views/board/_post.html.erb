<div class="col-md-12 post">
  <% unless post.user.nil? %>
    <div class="col-md-5" style="font-weight:bold;"><%= post.user.username %></div>
  <% end %>
  <%# Timestamp & Actions %>
  <div class="col-md-7" style="text-align:right;">
    <%= time_ago_in_words(post.created_at) %> ago
    <a href="/board/edit/<%= post.id %>?page_id=<%=params[:page_id]%>"><span class="glyphicon glyphicon-pencil"/></a>
  </div>
  
  <%# Body %>
  <div class="col-md-12 post-body"><%=raw post.body.gsub(/\n/, '<br/>') %></div>
  
  <%# Reply %>
  <form action="/reply/create/<%= post.id %>" class="col-md-12">
    <input name="body" class="col-md-10" type="text" placeholder="댓글">
    <input class="col-md-2" type="submit" value="등록">
  </form>
  <% post.replies.each do |reply| %>
    <%= render partial: "board/reply", :locals => {:reply => reply} %>
  <% end %>
</div>
<style>
  .post {
    padding : 15px 5px;
  }
  .post > div > a > span {
    padding : 5px;
    border : 1px solid rgb(150,150,150);
    border-radius : 2px;
    color : black;
  }
  .post-body {
    margin : 15px 0px;
  }
</style>